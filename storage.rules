rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Users can read/write their own profile images
    match /users/{userId}/profile/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Legal contract documents - RESTRICTED ACCESS
    match /users/{userId}/contracts/{fileName} {
      // Only the user themselves or admins can read contracts
      allow read: if request.auth != null && 
        (request.auth.uid == userId || 
         firestore.get(/databases/(default)/documents/admins/$(request.auth.uid)).data.isAdmin == true);
      
      // Only the user can write their own contracts
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // KYC documents - Admin access only
    match /kyc/{userId}/{fileName} {
      allow read: if request.auth != null && 
        firestore.get(/databases/(default)/documents/admins/$(request.auth.uid)).data.isAdmin == true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Property documents - Relaxed write for authenticated users (Admin Panel)
    match /property-documents/{propertyId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }

    // Deny all other requests
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
